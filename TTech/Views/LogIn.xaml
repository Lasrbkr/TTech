<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="TTech.LogIn">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
                    iOS="30, 20, 30, 0"
                    Android="30, 0, 30, 0"
                    WinPhone="30, 20, 30, 20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Image Grid.Row="1" Source="usuario" />
			<Entry Grid.Row="2" x:Name="txtUsuario" Placeholder="Usuario" />
			<Entry Grid.Row="3" x:Name="txtContrasena" Placeholder="ContraseÃ±a" />
			<Button Grid.Row="4" Text="Ingresar" FontAttributes="Bold" Clicked="Sesion_Clicked" />
		</Grid>
	</ContentPage.Content>
</ContentPage>
